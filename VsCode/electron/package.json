{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "My Electron ARM App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.myapp.electron",
    "productName": "MyElectronApp",
    "target": [
      "nsis",
      "zip"
    ],
    "defaultArch": "arm64",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^latest-version",
    "electron-builder": "^latest-version"
  }
}
